<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/assignment_card"
        android:layout_width="360dp"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#cacaca"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2D9CDB"
                    android:orientation="vertical">


                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="7dp"
                        android:text="Work Ending Date"
                        android:textColor="#c6c4c4"
                        android:textSize="14sp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_dashboard_date"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginVertical="7dp"
                            android:text="date"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_dashboard_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginVertical="7dp"
                            android:text="day"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_dashboard_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginVertical="7dp"
                            android:text="month"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_dashboard_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="7dp"
                            android:text="Year"
                            android:textSize="20sp"/>





                    </LinearLayout>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- company approved hours-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="#95D8EE"
                            android:paddingLeft="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_dashboard_company_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Company Name"
                                android:textSize="20sp" />



                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="#D5E4E9"
                            android:orientation="horizontal">

                            <TextView
                            android:paddingLeft="10dp"
                            android:id="@+id/tv_dashboard_approved"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginVertical="7dp"
                            android:text="Approved"
                            android:textColor="@color/green_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                            <TextView
                                android:paddingLeft="10dp"
                                android:id="@+id/tv_dashboard_rejected"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_marginVertical="7dp"
                                android:text="Rejected"
                                android:textColor="@color/red_primary"
                                android:textSize="14sp"
                                android:textStyle="bold" />


                        </LinearLayout>

                    </LinearLayout>


                    <!-- company ends here-->
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="#74D39C"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:text="HOURS"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_dashboard_total_hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="40.00"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <!--expected hour ends here-->


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

